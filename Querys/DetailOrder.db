-- Crear tabla para detalle del pedido
Create table
    DetailOrder (
        id int (11) primary key auto_increment,
        id_order int (11),
        id_product int (11),
        quantity int (11),
        price float (11),
        total float (11),
        foreign key (id_order) references Purchase (id),
        foreign key (id_product) references Product (id)
    );


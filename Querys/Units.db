use conoweb;

-- Crear tabla para tipo de unidades
-- id
-- name
-- symbol
-- description

CREATE TABLE IF NOT EXISTS Units (
    id INT NOT NULL AUTO_INCREMENT,
    name VARCHAR(50) NOT NULL,
    symbol VARCHAR(10) NOT NULL,
    description VARCHAR(100) NOT NULL,
    PRIMARY KEY (id)
);



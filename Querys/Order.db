-- Crear tabla para  los pedidos 
-- Date order
-- Status otder
-- Number order
-- Id Client 
-- Note client  
-- Discounts
Create table
    purchase (
        id int (11) primary key auto_increment,
        date_order timestamp default current_timestamp,
        status_order varchar(100),
        number_order int (11),
        note_client varchar(100),
        discounts float (11) id_client int (11),
        foreign key (id_client) references Users (id)
    );

